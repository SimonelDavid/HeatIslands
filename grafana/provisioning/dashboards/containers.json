{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Memory Usage",
      "type": "graph",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name=~\"^heatislands_.+\"}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "yaxes": [
        {
          "format": "bytes",
          "label": null,
          "logBase": 2
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "title": "CPU Usage",
      "type": "graph",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{name=~\"^heatislands_.+\"}[1m])",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "yaxes": [
        {
          "format": "percent",
          "logBase": 1,
          "max": "100",
          "min": "0"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "title": "Disk I/O Read",
      "type": "graph",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "rate(container_fs_reads_bytes_total{name=~\"^heatislands_.+\"}[1m])",
          "refId": "C"
        }
      ],
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 9
      },
      "yaxes": [
        {
          "format": "bytes",
          "logBase": 1
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "title": "Disk I/O Write",
      "type": "graph",
      "datasource": "${DS_PROMETHEUS}",
      "targets": [
        {
          "expr": "rate(container_fs_writes_bytes_total{name=~\"^heatislands_.+\"}[1m])",
          "refId": "D"
        }
      ],
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 9
      },
      "yaxes": [
        {
          "format": "bytes",
          "logBase": 1
        },
        {
          "format": "short"
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "type": "query",
        "datasource": "${DS_PROMETHEUS}",
        "name": "container",
        "request": "query_result(container_memory_usage_bytes)",
        "refresh": 2,
        "includeAll": true,
        "regex": "/^heatislands_.+$/"
      }
    ]
  },
  "schemaVersion": 26,
  "style": "dark",
  "tags": ["prometheus", "cadvisor", "containers"],
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
    "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
  },
  "timezone": "",
  "title": "Container Monitoring",
  "uid": "new-dashboard",
  "version": 1
}
